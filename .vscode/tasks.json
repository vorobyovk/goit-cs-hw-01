{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Збірка NASM",
      "type": "shell",
      "command": "nasm",
      "args": [
        "-f",
        "bin",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.com"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
